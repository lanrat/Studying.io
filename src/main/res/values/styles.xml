<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MainBoard">
        <item name="android:background">#e9e4de</item>
        <item name="android:padding">0px</item>
    </style>

    <style name="LowerBarButtton">
        <item name="android:background">#2d2d2d</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HintButton" parent="LowerBarButtton">
        <item name="android:background">#7e8493</item>
        <item name="android:text">@string/hint_button</item>
    </style>

    <style name="AnswerButton" parent="LowerBarButtton">
        <item name="android:background">#69d394</item>
        <item name="android:text">@string/answer_button</item>
    </style>

    <style name="QuestionButton" parent="LowerBarButtton">
        <item name="android:background">#15C7CB</item>
        <item name="android:text">@string/question_button</item>
    </style>

    <style name="Box">
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="BoxText">
        <item name="android:background">@drawable/outline</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">#716f70</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoxTitle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">1dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="QuestionBoxTitle" parent="BoxTitle">
        <item name="android:textColor">#15c7cb</item>
    </style>

    <style name="ExampleBoxTitle" parent="BoxTitle">
        <item name="android:textColor">#FF9696</item>
    </style>

    <style name="HintBoxTitle" parent="BoxTitle">
        <item name="android:textColor">#7e8493</item>
    </style>

    <style name="AnswerBoxTitle" parent="BoxTitle">
        <item name="android:textColor">#69d394</item>
    </style>

</resources>